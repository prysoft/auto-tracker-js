<mvc:View controllerName="com.prysoft.autotracker.controller.Login"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:html="http://www.w3.org/1999/xhtml">

    <FlexBox class="login-view-page" fitContainer="true" alignItems="Center" justifyContent="Center" direction="Column">
        <items>
            <Label text="Системы Безопасности" class="text-small-italic" />
            <html:div style="position:relative; overflow:hidden; width:100vw; height:100vh; min-width:15rem; max-width:620px; max-height:218px; border-radius:3px 3px 0 0;">
                <html:iframe id="auth-remote"
                             src="https://hosting.wialon.com/login.html?lang=ru&amp;client_id=AuTr&amp;access_type=256&amp;activation_time=0&amp;duration=604800&amp;flags=1&amp;redirect_uri=https://hosting.wialon.com/post_token.html"
                             scrolling="no"
                             style="position:absolute; overflow:hidden; top:-110px; width:100vw; height:100vh; border:none; min-width:15rem; max-width:620px; max-height:430px;"></html:iframe>
            </html:div>

        </items>
    </FlexBox>

</mvc:View>
