<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:pry="com.prysoft.sap.control" >
    <Dialog title="Место события">
        <content>
            <FlexBox height="300px" fitContainer="true">
                <pry:YMap id="evtLcMap" geoObjects="{}" fitContainer="true" showBackButton="false">
                    <pry:layoutData>
                        <FlexItemData growFactor="1" />
                    </pry:layoutData>
                </pry:YMap>
            </FlexBox>
        </content>
        <beginButton>
            <Button text="OK" press="onPressCloseLcDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>