<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
    <IconTabFilter text="Отпуск топлива" key="tab_fuelCharges">

        <HBox alignItems="Center">
            <Label text="Группировать:" />
            <RadioButtonGroup columns="2" selectedIndex="1" select="onSelectGroupBy">
                <buttons>
                    <RadioButton id="groupByRcvr" text="по получателю" />
                    <RadioButton id="groupByDate" text="по дате" />
                </buttons>
            </RadioButtonGroup>
        </HBox>

        <!-- Two tables is a workaround for fixed sap.m.Table header -->
        <Table showNoData="false">
            <columns>
                <Column width="4.5em" minScreenWidth="Tablet" demandPopin="true">
                    <Text text="Время" />
                </Column>
                <Column>
                    <Text text="Получатель" />
                </Column>
                <Column width="6em" minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
                    <Text text="По карте, л" />
                </Column>
                <Column width="6em" minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
                    <Text text="Без карты, л" />
                </Column>
            </columns>
        </Table>
        <ScrollContainer height="auto" width="100%" horizontal="false" vertical="true" class="tblBodyWithHeaderAndFooter">
            <Table id="tblFuelMessages"
                   items="{path: '/requestedMessages', sorter:[{path:'dt', descending:true, group:'.getMsgGroup'}, {path:'t'}], groupHeaderFactory: '.getMsgGroupHeader'}">
                <!-- mergeDuplicates="true" group:true ,{path:'t', descending:false} -->
                <columns>
                    <Column width="4.5em" minScreenWidth="Tablet" demandPopin="true" />
                    <Column />
                    <Column width="6em" minScreenWidth="Tablet" demandPopin="true" hAlign="Right" />
                    <Column width="6em" minScreenWidth="Tablet" demandPopin="true" hAlign="Right" />
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <!--<ObjectIdentifier title="{vn}.{vt}" />-->
                            <Text text="{path: 't', type: 'sap.ui.model.type.Date', formatOptions: {pattern:'HH:mm'}}" />
                            <Text text="{parts:['theft_place', 'p/refueling_card_id', '/fuelCardsMap'], formatter: '.formatRefuelingCardId'}" />
                            <Text text="{= ${p/refueling_amount} === undefined ? '---' : Math.abs(${p/refueling_amount}) &lt; 1.0
                            ? ${path: 'p/refueling_amount', type: 'sap.ui.model.type.Float', formatOptions: {groupingEnabled:true, groupingSeparator:' ', maxFractionDigits:2 }}
                            : ${path: 'p/refueling_amount', type: 'sap.ui.model.type.Float', formatOptions: {groupingEnabled:true, groupingSeparator:' ', maxFractionDigits:0 }} }" />
                            <Text text="{= Math.abs(${theft_amount}) &lt; 1.0
                            ? ${path: 'theft_amount', type: 'sap.ui.model.type.Float', formatOptions: {groupingEnabled:true, groupingSeparator:' ', maxFractionDigits:2 }}
                            : ${path: 'theft_amount', type: 'sap.ui.model.type.Float', formatOptions: {groupingEnabled:true, groupingSeparator:' ', maxFractionDigits:0 }} }" />
                        </cells>
                        <customData>
                            <core:CustomData key="err" value="true" writeToDom="{= !!${theft_amount} }" />
                        </customData>
                    </ColumnListItem>
                </items>
            </Table>
        </ScrollContainer>
        <Table showNoData="false">
            <columns>
                <Column width="5em" styleClass="no-horizontal-padding">
                    <footer>
                        <Button icon="sap-icon://save" type="Transparent" press="saveChargeReport" />
                    </footer>
                </Column>
                <Column>
                    <footer>
                        <Text text="ИТОГО" />
                    </footer>
                </Column>
                <Column width="6em" minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
                    <footer>
                        <Text text="{path: '/fuelChargesReport/refueling_total', type: 'sap.ui.model.type.Float', formatOptions: {groupingEnabled:true, groupingSeparator:' ', maxFractionDigits: 0} }" />
                    </footer>
                </Column>
                <Column width="6em" minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
                    <footer>
                        <Text text="{path: '/fuelChargesReport/theft_total', type: 'sap.ui.model.type.Float', formatOptions: {groupingEnabled:true, groupingSeparator:' ', maxFractionDigits: 0} }" />
                    </footer>
                </Column>
            </columns>
        </Table>
    </IconTabFilter>
</core:FragmentDefinition>
