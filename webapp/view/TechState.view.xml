<mvc:View controllerName="com.prysoft.autotracker.controller.TechState"
          xmlns:core="sap.ui.core"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m">

    <SplitContainer mode="StretchCompressMode">
        <masterPages>
            <Page title="{i18n>tTechState}" class="sapUiStdPage">
                <subHeader>
                    <Toolbar>
                        <ComboBox items="{ path: '/periodCombo' }" width="100%">
                            <core:Item key="{key}" text="{text}" />
                        </ComboBox>
                    </Toolbar>
                </subHeader>
                <content>
                    <List items="{path: '/units'}" itemPress="goToTechDetails">
                        <items>
                            <StandardListItem
                                    title="{name}"
                                    description="{address}"
                                    icon="{icon}"
                                    iconDensityAware="false"
                                    iconInset="false" />
                        </items>
                    </List>
                </content>
            </Page>
        </masterPages>
        <detailPages>
            <Page title="Тех. состояние. Заголовок 1" class="sapUiStdPage">
                <content>
                    <Label text="ДЕТАЛЬНАЯ ИНФОРМАЦИЯ" />
                </content>
            </Page>
        </detailPages>
    </SplitContainer>
</mvc:View>
